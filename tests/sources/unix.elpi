pred works.
works :-
  open-process ["cat"] _ P ok,
  P = (process Out In Err),
  Test = "foo",
  output In Test,
  input_line Out L,
  L = Test
  unix.close-process P ok.

pred starts-but-fails.
starts-but-fails :-
  open-process ["ls", "non-existent"] _ P ok,
  P = (process Out In Err),
  input_line Err L,
  print "error from: ls non-existent:" L,
  unix.close-process P (error Msg),
  print "exit code:" Msg.

pred does-not-start.
does-not-start :-
  unix.open-process ["non-existent"] _ (process Out In Err) (error Msg),
  print "Unix API error:" Msg,
  var In, var Out, var Err.

main :- works, starts-but-fails, does-not-start.
